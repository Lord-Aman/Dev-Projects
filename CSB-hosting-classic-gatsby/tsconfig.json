{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es6",
            "dom"
        ],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false,
        "rootDir": "src",
        "outDir": "dist",
        "jsx": "react"
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "include": [
        "src/**/*"
    ]
}